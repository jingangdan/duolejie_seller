<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bac"
    android:orientation="vertical"
    android:weightSum="2" >

	<RelativeLayout 
	    android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"  >
	    <ImageView 
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:layout_centerInParent="true"
	        android:src="@drawable/logoxx"/>
	</RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_ruzhu"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_background1"
            android:gravity="center"
            android:text="商家申请入驻"
            android:textColor="#DD463A"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ruzhuxuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家入驻须知"
                android:textColor="#FFF"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFF" />

        <TextView
            android:id="@+id/tv_denglu"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_backgroundsds"
            android:gravity="center"
            android:text="直接登录"
            android:textColor="#FFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>